<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
"http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.cmos.itframe.dao.UserRoleRelationShipDao">


    <select id="getUserRoleRelationships" resultType="com.cmos.itframe.beans.UserRoleRelationShip">
        select uid,rid from user_role
        <where>
            <if test="uid !=null">
                AND uid=#{uid}
            </if>
            <if test="rid !=null">
                AND rid=#{rid}
            </if>
        </where>
    </select>

</mapper>